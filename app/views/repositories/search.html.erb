<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @results %>
    <ul>
    <% @results.each do |result| %>
      <li>
        <%= result["name"] %><br>
        <a href="<%= result[html_url]%>">Check It Out</a><br>
        <%= result["description"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
